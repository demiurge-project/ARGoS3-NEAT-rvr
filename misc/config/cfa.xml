         <body position="1.091,-0.63,0" orientation="60,0,0" />
      </box>
      <box id="wall_8" size="0.68,0.05,0.5" movable="false">
         <body position="1.091,0.63,0" orientation="-60,0,0" />
      </box>
      <box id="wall_9" size="0.68,0.05,0.5" movable="false">
         <body position="-1.091,-0.63,0" orientation="-60,0,0" />
